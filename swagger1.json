{
  "swagger": "2.0",
  "info": {
    "title": "Events API",
    "description": "An API that helps manage events.",
    "version": "v1"
  },
  "basePath": "/v1",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/events": {
      "get": {
        "summary": "Get a list of all events",
        "parameters": [
          {
            "name": "event_id",
            "in": "query",
            "type": "integer",
            "required": false,
            "description": "Optional event ID to filter by specific event"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of events.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Event"
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new event",
        "parameters": [
          {
            "name": "event",
            "in": "body",
            "description": "Event data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Event"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Event created"
          }
        }
      }
    },
    "/events/{event_id}": {
      "get": {
        "summary": "Get an event by ID",
        "parameters": [
          {
            "name": "event_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the event to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Detailed information about an event",
            "schema": {
              "$ref": "#/definitions/Event"
            }
          }
        }
      },
      "put": {
        "summary": "Update an existing event",
        "parameters": [
          {
            "name": "event_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the event to update"
          },
          {
            "name": "event",
            "in": "body",
            "description": "Event data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Event"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Event updated"
          }
        }
      },
      "delete": {
        "summary": "Delete an event",
        "parameters": [
          {
            "name": "event_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID of the event to delete"
          }
        ],
        "responses": {
          "204": {
            "description": "Event deleted"
          }
        }
      }
    }
  },
  "definitions": {
    "Event": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": " of the event"
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "Date of the event"
        },
        "type": {
          "type": "string",
          "description": "Type of the event"
        },
        "location": {
          "type": "string",
          "description": "Location of the event"
        },
        "price": {
          "type": "number",
          "format": "float",
          "description": "Price of the event"
        }
      },
      "required": ["name","date", "type", "location", "price"]
    }
  }
}
